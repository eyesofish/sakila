<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <property name="LOG_PATH" value="logs" />

  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX} %-5level ${PID:- } --- [%thread] %logger : %msg%n</pattern>
    </encoder>
  </appender>

  <appender name="SQL_SLOW_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${LOG_PATH}/sqlslow.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
      <fileNamePattern>${LOG_PATH}/sqlslow.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
      <maxFileSize>20MB</maxFileSize>
      <maxHistory>14</maxHistory>
      <totalSizeCap>1GB</totalSizeCap>
    </rollingPolicy>
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger - %msg%n</pattern>
    </encoder>
  </appender>

  <!-- 关键：把你代码里的 LoggerFactory.getLogger("SLOW_SQL") 路由到 sqlslow.log -->
  <logger name="SLOW_SQL" level="WARN" additivity="false">
    <appender-ref ref="SQL_SLOW_FILE" />
  </logger>

  <logger name="SERVICE_COST" level="INFO" />
  <logger name="net.ttddyy.dsproxy.listener" level="INFO" />

  <root level="INFO">
    <appender-ref ref="CONSOLE" />
  </root>
</configuration>
